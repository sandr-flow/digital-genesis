# Environment Variables for Digital Genesis
# Copy this file to .env and fill in your values

# --- Telegram Bot ---
# Get your token from @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# --- Google Gemini API ---
# Get your API keys from Google AI Studio: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# --- Mistral API ---
# Get your API key from https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# --- AI Provider Selection ---
AI_PROVIDER=gemini
AI_REQUEST_TIMEOUT_SECONDS=30
AI_RATE_LIMIT_RPS=0

# --- Mistral Models ---
MISTRAL_CHAT_MODEL=mistral-large-latest
MISTRAL_REFLECTION_MODEL=mistral-large-latest
MISTRAL_BACKUP_MODEL=
MISTRAL_CONCEPTS_MODEL=mistral-large-latest
